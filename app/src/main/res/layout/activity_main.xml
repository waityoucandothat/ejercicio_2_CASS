<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Hello World!" />
    <Button
        android:id="@+id/Btnboton1"
        android:text="pulsame"
        android:layout_width="wrap_content"
        />
    <ToggleButton
        android:id="@+id/Btnboton2"
        android:textOn="encendido"
        android:textOff="apagado"
        />

    <ImageButton
        android:id="@+id/Btnboton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:contentDescription="ok"
        android:scaleType="fitStart"
        android:src="@drawable/esta" />

    <CheckBox
        android:id="@+id/btnboton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:checked="false"
        android:text="marcame" />

    <RadioGroup
        android:id="@+id/radiogrup"
        android:layout_width="76dp"
        android:layout_height="54dp"
        android:layout_row="1"
        android:layout_column="2"
        android:orientation="vertical">

    </RadioGroup>

    <RadioButton
        android:id="@+id/radio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="opcion2" />

    <RadioButton
        android:id="@+id/radio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:text="opcion1" />
    <Spinner android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</GridLayout>